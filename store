#include <stdio.h>
int main()
{
    struct details
    {
        char name[20];
        int price;
        int code;
        int qty;
    };
    struct details item[50];
    int n, i;
 
    printf("Enter number of items:");
    scanf("%d", &n);
    for (i = 0; i < n; i++)
    {
        
        printf("Item name: \n");
        scanf("%s", item[i].name);
       
        printf("Item code: \n");
        scanf("%d",&item[i].code);
        
        printf("Quantity: \n");
        scanf("%d",&item[i].qty);
        
        printf("price: \n");
        scanf("%d",  &item[i].price);
        
    }
    printf("                        *****  INVENTORY ***** \n");
    printf("************************************************************************\n");
    printf("    S.N.    |    NAME    |    CODE    |  QUANTITY  |  PRICE   \n");
    printf("-----------------------------------------------------------------------\n");
    for (i = 0; i < n; i++)
    printf("     %d           %-15s%-d        %-5d       %-5d   \n", i + 1, item[i].name, item[i].code, item[i].qty,item[i].price);
    printf("************************************************************************\n");
}
